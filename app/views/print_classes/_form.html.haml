= form_for @print_class do |f|
  - if @print_class.errors.any?
    #error_explanation
      %h2= "#{pluralize(@print_class.errors.count, "error")} prohibited this print_class from being saved:"
      %ul
        - @print_class.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
