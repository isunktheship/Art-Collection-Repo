-# %video#login-vid{:autoplay => "", :loop => true, :muted => "", :src => "/assets/295935375.mp4"}
.login-image
.container.text-center{:style => "margin-top:30vh;"}
  %div.login-container
    %h1{style: "font-family:Againts;"} Art Repo - Login
    %br
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
      .form-group.col-sm-12{style: "margin-left:auto;margin-right:auto;"}
        .input-group
          .input-group-addon
            %span.glyphicon.glyphicon-user
          = f.email_field :email, placeholder: "E-Mail", autofocus: true, class: 'form-control col-xs-9'
      .form-group.col-sm-12{style: "margin-left:auto;margin-right:auto;"}
        .input-group
          .input-group-addon
            %span.glyphicon.glyphicon-lock
          = f.password_field :password, placeholder: "Password", autocomplete: "off", class: 'form-control col-xs-9'
      - if false
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
      %br/
      .actions
        = f.submit "Login", class: "btn btn-med btn-primary"
    %br
    .form-group
      .col-sm-6
        - if devise_mapping.registerable? && controller_name != 'registrations'
          = link_to "Sign up", new_registration_path(resource_name)
        %br/
      .col-sm-6
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to "Forgot your password?", new_password_path(resource_name)

    -#= render "devise/shared/links"
:javascript
  if ( false ){
    document.getElementById('login-vid').addEventListener('loadedmetadata', function() {
      this.currentTime = 500;
    }, false);

    $('#login-vid').on('ended', function () {
      this.load();
    });
  }

:css
  body {
    background-color: #000;
  }

  #login-vid {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: -1000;
    height: 100%;
    width: auto;
    filter: grayscale(100%);
    -webkit-filter: grayscale(100%);
  }